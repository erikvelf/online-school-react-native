{
  "expo": {
    "name": "native-app",
    "slug": "purpleshcoolapp",
    "description": "App for the Purpleschool to learn courses (learning App using Expo and React Native)",
    "platforms": ["ios", "android"],
    "version": "1.0.0",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "#16171D",
    "newArchEnabled": true,
    "extra": { "eas": { "projectId": "3dcadacb-db3e-417f-8648-12fbcf27ff91" } },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#16171D",
      "primaryColor": "#6C38CC"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./local/assets/notification_icon.png",
          "color": "#ffffff",
          "defaultChannel": "default",
          "sounds": [
            "./local/assets/notification_sound.wav",
            "./local/assets/notification_sound_other.wav"
          ],
          "enableBackgroundRemoteNotifications": false
        }
      ],
      ["expo-router"]
    ],
    "ios": {
      "supportsTablet": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "purpleschool"
  }
}
