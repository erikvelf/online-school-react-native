{
  "expo": {
    "name": "native-app",
    "slug": "purpleschoolapp",
    "description": "App for the Purpleschool to learn courses (learning App using Expo and React Native)",
    "platforms": ["ios", "android"],
    "version": "1.0.0",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "#16171D",
    "newArchEnabled": true,
    "extra": {
      "eas": {
        "projectId": "3dcadacb-db3e-417f-8648-12fbcf27ff91"
      }
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#16171D",
      "primaryColor": "#6C38CC"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/FiraSans-Regular.ttf",
            "./assets/fonts/FiraSans-SemiBold.ttf"
          ]
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#16171D"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Necessary to change profile's photo"
        }
      ]
    ],

    "ios": {
      "supportsTablet": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "ru.purpleschool.purpleappdemo.interik"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "purpleschool"
  }
}
